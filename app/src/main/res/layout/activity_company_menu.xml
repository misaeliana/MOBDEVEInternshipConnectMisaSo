<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_companyMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/internship_connect"
        android:textAlignment="center"
        android:textSize="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/tv_companyMenuGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Hello <Company>"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyMenuTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/blue"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_companyMenuJobs"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/jobs"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyMenuGreeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_companyMenuProfile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_companyMenuJobs"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_companyMenuLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_companyMenuProfile"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"/>

</androidx.constraintlayout.widget.ConstraintLayout>